<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="admin">
        <createTable tableName="user_data">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="admin">
        <insert tableName="user_data">
            <column name="id" value="10000" />
            <column name="username" value="admin"/>
            <column name="password" value="$2a$10$X9i.jmttu0qN.eQhPEbAoe2y2jWsGW0VfSQxKDNJUDy5jNTJzqWZG"/>
        </insert>
    </changeSet>

    <changeSet id="add-category-table" author="admin">
        <createTable tableName="category">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="spadaj" author="admin">
        <insert tableName="category">
            <column name="id" valueNumeric="10000"/>
            <column name="name" value="Category A"/>
            <column name="user_id" value="10000" />
        </insert>
        <insert tableName="category">
            <column name="id" valueNumeric="10001"/>
            <column name="name" value="Category B"/>
            <column name="user_id" value="10000" />
        </insert>
    </changeSet>

    <changeSet id="huasd" author="admin">
        <addAutoIncrement tableName="user_data"
                          columnName="id"
                          columnDataType="BIGINT"/>
    </changeSet>

    <changeSet id="autoee" author="admin">
        <addAutoIncrement tableName="category"
                          columnName="id"
                          columnDataType="BIGINT"/>
    </changeSet>



</databaseChangeLog>
